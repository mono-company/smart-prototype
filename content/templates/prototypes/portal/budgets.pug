extends /templates/_layouts/master

block append pageVariables
    - var moduleTitle = "Activity budget transfer"
    - var bodyClass = "c-body"

block body
    .c-app-layout-alt
        main.c-app-layout-alt__main
            .c-app-layout-inner
                .c-app-layout-inner__content
                    .c-navbar.c-navbar--white.c-navbar--fixed-top.c-navbar--scrollable.c-navbar--bordered-bottom
                        .c-navbar-scroll-wrapper
                            .c-toolbar
                                .c-toolbar__left
                                    .c-toolbar__item
                                        a.c-button.c-button--icon.c-button--borderless(href="/prototypes/index.html")
                                            .c-button__content
                                                +icon('arrow-left')
                                                .u-sr-accessible Back
                                    .c-toolbar__item
                                        h2.c-toolbar__title Activity budget transfer

                                .c-toolbar__right
                                    .c-button-toolbar
                                        +c-button({skin: 'secondary'}) Clear
                                        +c-button({skin: 'primary', icon: 'check'}) Validate

                    .o-container-vertical
                        .o-container.o-container--medium
                            .o-form-group-layout.o-form-group-layout--horizontal

                                .o-form-group
                                    label.o-form-group__label(for="yearOfCreation") Debiting activity
                                    .o-form-group__controls.o-form-group__controls--full-width
                                        +c-input({id: 'debiting-ref'})

                                +c-form-group({label: 'Project', id: 'debiting-project', isFullWidth: true})
                                    +c-select({id: 'select', value: ['Choose a  project', 'Unspecified']})
                                    p.c-form-help-text Enter an activity reference and a project within the activity

                                hr.c-hr

                                .o-form-group
                                    label.o-form-group__label(for="yearOfCreation") Crediting activity
                                    .o-form-group__controls.o-form-group__controls--full-width
                                        +c-input({id: 'crediting-ref'})

                                +c-form-group({label: 'Project', id: 'crediting-project'})
                                    +c-select({id: 'select', value: ['Choose a  project', 'Unspecified']})
                                    p.c-form-help-text Enter an activity reference and a project within the activity

                                hr.c-hr

                                .o-form-group
                                    label.o-form-group__label(for="yearOfCreation") Amount to transfer
                                    .o-form-group__controls.o-form-group__controls--full-width
                                        .c-input-group
                                            .c-input-group__input
                                                input.c-input.c-input--w-medium(type="number" id="amount")
                                            .c-input-group__append â‚¬

                                +c-form-group({label: 'Date', id: 'group-date', type: 'date'})
                                    +c-input({id: 'date', type: 'date', placeholder: 'dd/mm/yyyy', width: 'medium' })
